{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [2, "always", "lowerCase"],
    "type-enum": [2, "always", [
      "build",
      "ci",
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "test",
      "revert",
      "redux",
      "hooks"
    ]]
  }
}
